@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description">Deneyim Ekleme Sayfası </p>
            <form class="forms-sample" action="AddExperience" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" name="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Tarih</label>
                    <input type="text" class="form-control" name="Date" >
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Görsel URL</label>
                    <input type="text" class="form-control" name="ImageUrl" />
                </div>

                <div class="form-group">
                    <label >Açıklama</label>
                    <textarea class="form-control" name="Description" rows="6"></textarea>
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>