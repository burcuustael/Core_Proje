@model EntityLayer.Concrete.About

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description">Hakkımdaki Bilgileri Düzenleme Paneli </p>
            <form class="forms-sample" asp-action="Index" method="post">
                <div class="form-group">
        
                    <input type="hidden" class="form-control" asp-for="Id">
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label> Yaş</label>
                    <input type="text" class="form-control" asp-for="Age">
                </div>
                  <div class="form-group">
                    <label> E-mail</label>
                    <input type="text" class="form-control" asp-for="Mail">
                </div>
                
                <div class="form-group">
                    <label> Yaş</label>
                    <input type="text" class="form-control" asp-for="Age">
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    <input type="text" class="form-control" asp-for="Address">
                </div> 
                <div class="form-group">
                    <label>Telefon</label>
                    <input type="text" class="form-control" asp-for="Phone">
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea rows="6" cols="10" class="form-control" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary me-2" >Güncelle</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

