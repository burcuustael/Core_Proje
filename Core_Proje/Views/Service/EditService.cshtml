@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Ekleme Sayfası</h3>
</div>

@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                  <form class="forms-sample">
                    @Html.HiddenFor(x=>x.Id)
                    <br />
                    @Html.Label("Hizmet Başlığı")
                    @Html.TextBoxFor(x=>x.Title, new{ @class = "form-control"})

                    <br />
                    <label>Görsel 1</label>
                    @Html.TextBoxFor(x=>x.ImageUrl, new{ @class = "form-control"})
                    <br />
                    <button type="submit" class="btn btn-info">Güncelle</button>

                </form>
            </div>
        </div>
    </div>

}

