@model EntityLayer.Concrete.Portfolio

@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description">Proje Ekleme Sayfası </p>
            <form class="forms-sample" action="AddPortfolio" method="post">
                <div class="form-group">
                    <label >Proje Başlığı</label>
                    <input type="text" class="form-control" name="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
     
                <div class="form-group">
                    <label >Görsel 1</label>
                    <input type="text" class="form-control" name="ImageUrl" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label >Görsel 2</label>
                    <input type="text" class="form-control" name="ImageUrl2" />
                    <span asp-validation-for="ImageUrl2" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Fiyat</label>
                    <textarea class="form-control" name="Price"></textarea>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Proje URL</label>
                    <textarea class="form-control" name="ProjectUrl"></textarea>
                    <span asp-validation-for="ProjectUrl" class="text-danger"></span>
                </div>
                   <div class="form-group">
                    <label>Tamamlanma Oranı</label>
                    <textarea class="form-control" name="Value"></textarea>
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-info">Ekle</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>
