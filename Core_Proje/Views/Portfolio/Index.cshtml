@using EntityLayer.Concrete
@model List<Portfolio>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row mt-5">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Projelerim</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Proje Adı</th>
                            <th scope="col">Ücret</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Tamamlanma Oranı</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                       @* <a class="avatar rounded-circle mr-3 ">
                                            <img alt="Image placeholder" src="@item.Platform">
                                        </a>*@
                                        <div class="media-body">
                                            <span class="mb-0 text-sm">@item.Name</span>
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    @item.Price
                                </td>
                                <th>
                                    <span class="badge badge-dot mr-4">
                                         Tamamlandı
                                    </span>
                                </th>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="mr-2">@item.Value %</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                <td><a href="/Portfolio/DeletePortfolio/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Portfolio/EditPortfolio/@item.Id" class="btn btn-outline-warning">Düzenle</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
             </div>
        </div>
        <br />
        <a href="/Portfolio/AddPortfolio/" class="btn btn-info"> Yeni Proje Girişi</a>
    </div>
</div>
<br />
