@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageAdd";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description">Yeni Mesaj Gönderme Paneli </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Konu</label>
                    <input type="text" class="form-control" asp-for="Subject">
                </div>
                <div class="form-group">
                    <label>Alıcı</label>
                    <input type="text" class="form-control" asp-for="Receiver">
                </div>  
                <div class="form-group">
                    <label>Mesaj</label>
                    <input type="text-area" class="form-control" asp-for="MessageContent">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

