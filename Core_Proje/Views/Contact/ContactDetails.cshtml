@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Mesaj Detay Sayfası</p>
            <form class="forms-sample" >
                <div class="form-group">
                    <label>ID</label>
                    <input type="text" class="form-control" asp-for="Id">
                </div>
                <div class="form-group">
                    <label>Gönderen</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label>Mail Adresi </label>
                    <input type="text" class="form-control" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="text" class="form-control" asp-for="Date">
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" asp-for="Content"></textarea>
                </div>
             <a asp-action="Index" class="btn btn-primary mr-2">İleşim Sayfasına Dön...</a>
            </form>
        </div>
    </div>
</div>
