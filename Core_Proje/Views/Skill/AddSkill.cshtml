@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description">Yetenek Ekleme Sayfası </p>
            <form class="forms-sample" action="AddSkill" method="post">
                <div class="form-group">
                    <label >Yetenek Başlığı</label>
                    <input type="text" class="form-control" name="Title">
                </div>
                <div class="form-group">
                    <label >Değer</label>
                    <input type="text" class="form-control" name="Value">
                </div>
              
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>