@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h3>Mesaj Detayları</h3>
<br />
<form class="form-group">

    @Html.HiddenFor(x=>x.Id, new{@class= "form-control"})
    <br />
    @Html.Label("Gönderenin Adı")
    @Html.TextBoxFor(x=>x.SenderName, new{@class= "form-control"})
    <br />
    @Html.Label("Gönderenin Maili")
    @Html.TextBoxFor(x=>x.Sender, new{@class= "form-control"})
    <br />
    @Html.Label("Mesaj")
    @Html.TextBoxFor(x=>x.MessageContent, new{@class= "form-control"})

</form>
